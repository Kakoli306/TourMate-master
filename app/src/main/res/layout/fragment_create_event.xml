<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"

        android:background="@drawable/img1"
        tools:context="com.example.r3l0ad3d.tourmate.Fragments.CreateEventFragment">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <EditText
                android:id="@+id/etEventPlaceCE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Event Place"


                android:textColorHint="#020101"
                android:textStyle="bold"
                android:textSize="23sp"
                android:textColor="#000"
                android:background="@drawable/edittextshape"
                android:gravity="center"/>
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvFromDateCE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From Date"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:background="@drawable/edittextshape"/>
                <Button
                    android:id="@+id/btnFromDateCE"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Date"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:background="@drawable/buttonshaperound"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tvEventPlace"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="To Date"
                    android:background="@drawable/buttonshaperound"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="25sp" />
                <Button
                    android:id="@+id/btnToDateCE"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Date"/>

            </LinearLayout>

        </LinearLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <EditText
                android:id="@+id/etEstimatedBudgetCE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Estimated Budget"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center"/>
        </android.support.design.widget.TextInputLayout>
        <Button
            android:id="@+id/btnCreateEventCE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Create event"/>

    </LinearLayout>
</layout>
